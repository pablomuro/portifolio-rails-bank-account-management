
<div class="m-7">
  <h1>Account Transactions</h1>

  <%= form_tag transactions_path, method: :get, class: "form-inline" do %>
    <div class="form-group">
      <%= label_tag 'Start Date' %>
      <%= text_field_tag 'start_date', params[:start_date], placeholder: "Start Date", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag 'End Date' %>
      <%= text_field_tag 'end_date', params[:end_date], placeholder: "End Date", class: "form-control" %>
    </div>
          <%= submit_tag 'Filter', class: 'btn btn-primary btn-sm' %>
  <% end %>

  <table class="table align-items-center">
    <thead>
      <tr>
        <th>Date</th>
        <th>Transaction type</th>
        <th>Transaction value</th>
        <th>Account money amount</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @transactions_list.each do |account_transaction| %>
        <tr>
          <td><%= account_transaction.date.strftime("%d/%m/%Y %H:%m")  %></td>
          <td><%= account_transaction.transaction_type.capitalize %></td>
          <td><%= number_to_currency(account_transaction.transaction_value) %></td>
          <td><%= number_to_currency(account_transaction.account_money_amount) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

