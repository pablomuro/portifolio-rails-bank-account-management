<p id="notice"><%= notice %></p>

<h1>Account Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Transaction type</th>
      <th>Transaction value</th>
      <th>Account money amount</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions_list.each do |account_transaction| %>
      <tr>
        <td><%= account_transaction.date %></td>
        <td><%= account_transaction.transaction_type %></td>
        <td><%= account_transaction.transaction_value %></td>
        <td><%= account_transaction.account_money_amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

