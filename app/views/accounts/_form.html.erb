<%= form_with(model: account, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :account_number %>
    <%= form.text_field(:account_number, class: 'form-control', readonly: !(action_name == 'new' || action_name == 'create')) %>
    <%= content_tag(:div, account.errors[:account_number][0], class: 'invalid-feedback field_with_errors') if account.errors[:account_number]%>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field(:name, class: 'form-control') %>
        <%= content_tag(:div, account.errors[:name][0], class: 'invalid-feedback field_with_errors') if account.errors[:name]%>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field(:email, class: 'form-control')  %>
    <%= content_tag(:div, account.errors[:email][0], class: 'invalid-feedback field_with_errors') if account.errors[:email]%>
  </div>

  <% if action_name == 'new' || action_name == 'create' %>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field(:password, class: 'form-control') %>
      <%= content_tag(:div, account.errors[:password][0], class: 'invalid-feedback field_with_errors') if account.errors[:password]%>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field(:password_confirmation, class: 'form-control') %>
      <%= content_tag(:div, account.errors[:password_confirmation][0], class: 'invalid-feedback field_with_errors') if account.errors[:password_confirmation]%>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit(class: 'btn btn-primary btn-sm') %>
  </div>
<% end %>
